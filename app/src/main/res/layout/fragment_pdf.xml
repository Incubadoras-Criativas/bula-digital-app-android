<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Ícone Anvisa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bula Original da Anvisa"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Para sua segurança, você será direcionado para a base de dados oficial do Governo Federal."
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtUrlAnvisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#F0F0F0"
            android:padding="8dp"
            android:text="Aguardando link..."
            android:textAlignment="center"
            android:textColor="#888888"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnAbrirAnvisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Acessar Bula Oficial"
            android:backgroundTint="@color/brand_blue_primary" />

        <Button
            android:id="@+id/btnAbrirBackup"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Abrir PDF"
            android:textColor="@color/brand_blue_primary"
            app:strokeColor="@color/brand_blue_primary"
            android:visibility="gone" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>